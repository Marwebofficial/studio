{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        }
      },
      "required": [
        "email"
      ]
    },
    "Message": {
      "title": "Message",
      "description": "Represents a single message within a chat.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": [
            "user",
            "assistant",
            "system",
            "error"
          ]
        },
        "content": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "fileDataUri": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string"
        },
        "quiz": {
          "type": "object"
        }
      },
      "required": [
        "id",
        "role",
        "content",
        "createdAt"
      ]
    },
    "Admin": {
      "title": "Admin",
      "description": "Represents an admin user.",
      "type": "object",
      "properties": {
        "isAdmin": {
          "type": "boolean",
          "description": "Whether the user is an admin."
        }
      },
      "required": [
        "isAdmin"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/admins/{userId}": {
      "schema": {
        "$ref": "#/entities/Admin"
      },
      "description": "Stores admin user information."
    }
  }
}
