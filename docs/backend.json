{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        }
      },
      "required": ["email"]
    },
    "Chat": {
      "title": "Chat",
      "description": "Represents a single chat conversation.",
      "type": "object",
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the chat was created."
        },
        "messages": {
          "type": "array",
          "description": "An array of messages in the chat.",
          "items": {
            "$ref": "#/entities/Message"
          }
        }
      },
      "required": ["createdAt", "messages"]
    },
    "Message": {
      "title": "Message",
      "description": "Represents a single message within a chat.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["user", "assistant", "system", "error"]
        },
        "content": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "fileDataUri": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string"
        },
        "quiz": {
          "type": "object"
        }
      },
      "required": ["id", "role", "content", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/chats/{chatId}": {
      "schema": {
        "$ref": "#/entities/Chat"
      },
      "description": "Stores the chat history for a user."
    }
  }
}
