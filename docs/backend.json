{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user was created."
        }
      },
      "required": [
        "email",
        "createdAt"
      ]
    },
    "Message": {
      "title": "Message",
      "description": "Represents a single message within a chat.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": [
            "user",
            "assistant",
            "system",
            "error"
          ]
        },
        "content": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "fileDataUri": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string"
        },
        "quiz": {
          "type": "object"
        }
      },
      "required": [
        "id",
        "role",
        "content",
        "createdAt"
      ]
    },
    "Admin": {
      "title": "Admin",
      "description": "Represents an admin user.",
      "type": "object",
      "properties": {
        "isAdmin": {
          "type": "boolean",
          "description": "Whether the user is an admin."
        }
      },
      "required": [
        "isAdmin"
      ]
    },
    "ActivityLog": {
      "title": "Activity Log",
      "description": "Represents a single user activity event.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who performed the activity."
        },
        "userEmail": {
          "type": "string",
          "description": "The email of the user."
        },
        "activityType": {
          "type": "string",
          "enum": ["signup", "login"],
          "description": "The type of activity."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "The time the activity occurred."
        }
      },
      "required": [
        "userId",
        "userEmail",
        "activityType",
        "timestamp"
      ]
    },
    "Chat": {
      "title": "Chat",
      "description": "Represents a chat session.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "title",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/admins/{userId}": {
      "schema": {
        "$ref": "#/entities/Admin"
      },
      "description": "Stores admin user information."
    },
    "/activity_logs/{logId}": {
      "schema": {
        "$ref": "#/entities/ActivityLog"
      },
      "description": "Stores user activity logs for admin monitoring."
    },
    "/users/{userId}/chats/{chatId}": {
      "schema": {
        "$ref": "#/entities/Chat"
      },
      "description": "Stores individual chat sessions for a user."
    },
    "/users/{userId}/chats/{chatId}/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/Message"
      },
      "description": "Stores messages within a specific chat session."
    }
  }
}
